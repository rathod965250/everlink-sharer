{
  "rewrites": [
    { "source": "/about", "destination": "/index.html" },
    { "source": "/contact", "destination": "/index.html" },
    { "source": "/privacy", "destination": "/index.html" },
    { "source": "/terms", "destination": "/index.html" },
    { "source": "/auth", "destination": "/index.html" },
    { "source": "/auth/callback", "destination": "/index.html" },
    { "source": "/analytics", "destination": "/index.html" },
    { "source": "/website-url-shortener", "destination": "/index.html" },
    { "source": "/url-compressor", "destination": "/index.html" },
    { "source": "/tiny-link", "destination": "/index.html" },
    { "source": "/shorten-my-url", "destination": "/index.html" },
    { "source": "/shorten-links", "destination": "/index.html" },

    { "source": "/:code([A-Za-z0-9_-]{3,64})", "destination": "/api/r/:code" },

    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" }
      ]
    }
  ]
}
